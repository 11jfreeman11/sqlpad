{
  "name": "sqlpad",
  "version": "0.0.3",
  "description": "A sql editor/runner to be run in your own private cloud. Supports MySQL, Postgres, and SQL Server.",
  "license": "MIT",
  "author": {
      "name": "Rick Bergfalk",
      "email": "rick.bergfalk@gmail.com"
  },
  "keywords": [
      "sql",
      "mssql",
      "postgres",
      "postgresql",
      "mysql"
  ],
  "repository" : {
    "type": "git", 
    "url": "git://github.com/rickbergfalk/sqlpad"
  },
  "bugs" : {
    "url": "https://github.com/rickbergfalk/sqlpad/issues",
    "email": "rick.bergfalk@gmail.com" 
  },
  "scripts": {
    "start": "nodemon server.js --db ./db --port 3000",
    "watchify": "watchify ./client-js/main.js -o ./public/javascripts/browserified.js -t browserify-shim"
  },
  "dependencies": {
    "express": "4.2.x",
    "ejs": "*",
    "pg.js": "3.0.x",
    "moment": "*",
    "bcrypt-nodejs": "0.0.x",
    "nedb": "0.10.x",
    "lodash": "2.4.x",
    "mssql": "^0.5.3",
    "mysql": "^2.1.1",
    "ua-parser": "^0.3.3",
    "yargs": "^1.2.2",
    "body-parser": "^1.2.0",
    "serve-favicon": "^2.0.0",
    "method-override": "^1.0.1",
    "cookie-parser": "^1.1.0",
    "cookie-session": "^1.0.2",
    "morgan": "^1.1.0",
    "uuid": "^1.4.1",
    "json2csv": "^2.2.1"
  },
  "main": "server.js",
  "bin": {
    "sqlpad": "./server.js"
  },
  "devDependencies": {
    "browserify": "^4.1.11",
    "browserify-shim": "^3.5.0"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "global:$",
    "ace": "global:ace",
    "Slick": "global:Slick",
    "nv": "global:nv",
    "d3": "global:d3"
  }
}
